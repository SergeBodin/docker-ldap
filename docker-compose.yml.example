version: '2'

networks:
    net:
        driver: bridge

services:
    slapd:
        image: zombi/ldap:latest
        environment:
            - "ROOTPW=pass"
            - "ORGANIZATION=example"
            - "DATADIR=/data"
            - "CONFDIR=/conf"
        volumes:
            - ./data/ldap/config:/conf
            - ./data/ldap/data:/data
